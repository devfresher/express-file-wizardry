{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    // "declarationMap": true,
    // "sourceMap": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],
  },
  "include": ["./src/**/*.ts", "src/testme.ts"],
  "exclude": ["node_modules"]
}
